<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yibo.parking.dao.car.TypeInfoMapper">

    <select id="getInfos" resultType="TypeInfo">
        select * from type_info
    </select>

    <select id="gets" resultType="TypeInfo">
        select * from type_info where type_id = #{id}
    </select>

    <insert id="insert">
        insert into type_info(
            id,
            type_id,
            `key`,
            value
        )
        values (
            #{id},
            #{typeId},
            #{key},
            #{value}
        )
    </insert>

    <update id="update">
        update type_info set
            type_id = #{typeId},
            `key` = #{key},
            value = #{value}
        where id = #{id}
    </update>

    <!--<update id="stop">
        update lease set
            status = '-1'
        where id = #{id}
    </update>

    <update id="start">
        update lease set
            status = '0'
        where id = #{id}
    </update>-->

    <delete id="del">
        delete from type_info where id = #{id}
    </delete>
</mapper>