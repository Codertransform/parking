<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yibo.parking.dao.car.TypeMapper">

    <select id="getTypes" resultType="Type">
        select * from type
    </select>

    <select id="get" resultType="Type">
        select * from type where id = #{id}
    </select>

    <insert id="insert">
        insert into type(
            id,
            name,
            hour,
            halfday,
            allday,
            week,
            month,
            halfyear
        )
        values (
            #{id},
            #{name},
            #{hour},
            #{halfday},
            #{allday},
            #{week},
            #{month},
            #{halfyear}
        )
    </insert>

    <update id="update">
        update type set
            name = #{name},
            hour = #{hour},
            halfday = #{halfday},
            allday = #{allday},
            week = #{week},
            month = #{month},
            halfyear = #{halfyear}
        where id = #{id}
    </update>

    <!--<update id="stop">
        update lease set
            status = '-1'
        where id = #{id}
    </update>

    <update id="start">
        update lease set
            status = '0'
        where id = #{id}
    </update>-->

    <delete id="del">
        delete from type where id = #{id}
    </delete>
</mapper>