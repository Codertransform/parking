<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yibo.parking.dao.user.RoleMapper">

    <select id="get" resultType="Role">
        select
            id as id,
            name as name,
            `desc` as description
        from role
        where 1=1
        <if test="id != null and id != ''">
            and id = #{id}
        </if>
        <if test="name != null and name != ''">
            and name = #{name}
        </if>
    </select>

    <select id="findList" resultType="Role">
        select
            id as id,
            name as name,
            `desc` as description
        from role
        where 1=1
        <if test="name != null and name != ''">
            and name = #{name}
        </if>
    </select>

    <insert id="insert">
        insert into role (
            id,
            name,
            `desc`
        )values(
            #{id},
            #{name},
            #{description}
        )
    </insert>

    <update id="update">
        update role set
            name = #{name},
            `desc` = #{description}
        where id = #{id}
    </update>

    <delete id="delete">
        delete from role where id=#{id}
    </delete>
</mapper>