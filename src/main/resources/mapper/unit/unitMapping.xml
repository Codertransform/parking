<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yibo.parking.dao.unit.UnitMapper">

    <select id="getUnits" resultType="Type">
        select * from unit
    </select>

    <select id="getUnitsBy" resultType="Type">
        select * from unit where id = #{id}
    </select>

    <insert id="insert">
        insert into unit(
            id,
            parent_id,
            name
        )
        values (
            #{id},
            #{parentId},
            #{name}
        )
    </insert>

    <update id="update">
        update unit set
            parent_id = #{parentId},
            name = #{name}
        where id = #{id}
    </update>

    <!--<update id="stop">
        update lease set
            status = '-1'
        where id = #{id}
    </update>

    <update id="start">
        update lease set
            status = '0'
        where id = #{id}
    </update>-->

    <delete id="del">
        delete from unit where id = #{id}
    </delete>
</mapper>